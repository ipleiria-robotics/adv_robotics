    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "subProcess": false,
            //"justMyCode": false,
            "args": [
                "--ros-args",
                "-p",
                "use_sim_time:=True"
            ]
        },
        {
            "name": "simple_task",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tw10/simple_task.py",
            "console": "integratedTerminal",
            "subProcess": false,
            "args": [
                "--ros-args",
                "-p",
                "use_sim_time:=True"
            ]
        },
        {
            "name": "Python: Attach using Process Id",
            "type": "python",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ],
    "compounds": [
        {
            "name": "simple_task + current file",
            "configurations": ["simple_task", "Python: Current File"]
        }
    ]
}