<?xml version="1.0"?>

<!-- Create the factory environment using gazebo and our robot -->
<launch>
  <arg name="gui" default="true" />
  <arg name="paused" default="true" />
  <arg name="use_sim_time" default="true" />
  <arg name="namespace" default="robot"/>

  <!-- Create the world. -->
  <include file="$(find factory_gazebo)/launch/factory_simulation.launch">
    <arg name="gui" value="$(arg gui)"/>
    <arg name="paused" value="$(arg paused)" />
    <arg name="use_sim_time" value="$(arg use_sim_time)" />
  </include>

  <!-- The following elements will all be created in the given namespace -->
  <group ns="$(arg namespace)">
    <!-- Add the robot -->
    <node name="robot" pkg="gazebo_ros" type="spawn_model"
          args="-file $(find pioneer2dx_description)/models/robot/model.sdf -sdf -model robot
                -gazebo_namespace /gazebo
                -x 0.0 -y -0.0 -z 0.0 -R 0.0 -P 0.0 -Y 0.0">
    </node>
  </group>

</launch>
