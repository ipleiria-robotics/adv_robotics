<?xml version="1.0"?>

<!-- Create the factory environment using gazebo and our robot -->
<launch>
  <arg name="gui" default="true" />
  <arg name="paused" default="true" />
  <arg name="use_sim_time" default="true" />
  <arg name="namespace" default="p3dx"/>

  <!-- Create the world. -->
  <include file="$(find factory_gazebo)/launch/factory_simulation.launch">
    <arg name="gui" value="$(arg gui)"/>
    <arg name="paused" value="$(arg paused)" />
    <arg name="use_sim_time" value="$(arg use_sim_time)" />
  </include>

  <!-- Add the robot -->
  <include file="$(find pioneer3dx_description)/launch/pioneer3dx_gazebo_hokuyo_urg_camera.launch">
    <arg name="namespace" value="$(arg namespace)"/>
  </include>

</launch>
