<?xml version="1.0"?>
<package>
  <name>factory_gazebo</name>
  <version>1.0.0</version>
  <description>
    Files for simulating Robot@Factory in Gazebo.
  </description>
  <license>GPL-3</license>
  <maintainer email="hugo.costelha@ipleiria.pt">Hugo Costelha</maintainer>
  <author email="hugo.costelha@ipleiria.pt">Hugo Costelha</author>

  <url type="website">https://github.com/ipleiria-robotics/adv_robotics/</url>

  <buildtool_depend>catkin</buildtool_depend>
  <build_depend>gazebo_ros</build_depend>
  <build_depend>roscpp</build_depend>
  <run_depend>gazebo_ros</run_depend>
  <run_depend>roscpp</run_depend>
  <export>
    <!-- Allow gazebo to find models in our path -->
    <gazebo_ros
        gazebo_media_path="${prefix}/.."
        gazebo_model_path="${prefix}/.." />
  </export>
</package>